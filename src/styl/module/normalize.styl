// box sizing
*,
*:before,
*:after
	box-sizing: border-box

// fonts
&,
button,
input,
textarea,
select
	font-family: sans-serif
	font-size: fontSize

input[type=email],
input[type=date],
input[type=datetime],
input[type=month],
input[type=number],
input[type=password],
input[type=search],
input[type=tel],
input[type=text],
input[type=time],
input[type=url],
input[type=week],
textarea
	cursor: text

input[type=search]::-webkit-search-cancel-button,
input[type=date]::-webkit-clear-button,
input[type=date]::-webkit-calendar-picker-indicator
	cursor: pointer

// scrollbars
*
	&::-webkit-scrollbar
		width: 6px
		height: 6px
		margin: 1px

	&::-webkit-scrollbar-track
		background: transparent

	&::-webkit-scrollbar-thumb
		background: colors.background - 10

	*:hover::-webkit-scrollbar-thumb
		background: colors.light

		&:hover
			background: colors.dark

// headings
h2, h3
	font-family: sans-serif

// links
a
	color: colors.primary

	&:hover
		color: colors.primaryLight
		text-decoration: none

// other
strong
	font-weight: bold

code
	padding: 0 .3em
	background: colors.lightest
	border-radius: 2px

// ordered list
ol
	list-style: none
	margin: 0
	padding: 0
	counter-reset: listNo

	li
		margin: 0
		margin-bottom: .5em
		padding-left: 1.5em

		&:last-child
			margin-bottom: 0

		&:before
			counter-increment: listNo
			content: counter(listNo) "."
			display: inline-block
			min-width: @padding-left
			margin-left: -@min-width
			padding-right: 5px
			text-align: right

ul
	list-style: initial
	margin: 0
	padding: 0
	border: 0

	li
		list-style-position: outside
		margin: 0 0 .5em 1.2em
		padding: 0
		border: 0
		border-bottom: 0
		overflow: visible